@page
@model EventosDeportivos.Presentacion.Pages.MunicipioModel
@{
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion de Municipios</title>
    <link rel="stylesheet" href="~/css/estilomunicipio.css" />
</head>

<body>

    <div id="cuerpoMunicipio">
        <h1>Gestion de Municipios</h1>

        <form action="post">
            <label>Nombre: </label>
            <input type="text" name="nombre" placeholder="Ingrese el nombre" />
        </form>

        <br>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                </tr>
            </thead>

            @foreach (var municipio in Model.municipios)
            {
                <tbody>
                    <tr>
                        <td>@municipio.Id</td>
                        <td>@municipio.Nombre</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</body>

</html>